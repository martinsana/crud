<% include ../partials/header.ejs%> 
<h1>Pessoas</h1>
    <table class="table table-striped table-hover table-bordered">
    <tr> 
        <th>Nome</th> 
        <th>Ações</th>
    </tr> 

    <% pessoas.map( pessoa => { %>

        <tr>
            <td><%= pessoa.nome %></td>
            <td>
                <div class="btn-group" role="group" aria-label="...">
                    <a type="button" class="btn btn-default">Editar</a>
                    <a type="button" class="btn btn-default" href="/pessoas/delete/<%= pessoa.id %>">Excluir</a>
                </div>
            </td>  
        </tr> 
      

    <% }) %> 
     
    </table> 
